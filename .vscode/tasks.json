{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start InterviewPilot Backend",
			"type": "shell",
			"command": "python",
			"args": [
				"backend/main.py"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}